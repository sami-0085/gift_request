<div class="my-10 mx-auto w-11/12 sm:w-6/5 max-w-3xl">
  <div class="card w-full bg-base-100 image-full shadow-xl">
    <figure><%= image_tag 'note.webp', alt: 'ノートを読む' %></figure>
    <div class="card-body">
      <h2 class="card-title justify-center text-4xl">- Story2 -</h2>
        <div class="card w-full mx-auto bg-base-200 shadow-xl mt-4">
          <div class="flex flex-col md:flex-row items-center">
            <figure>
              <%= image_tag 'note.png', alt: 'Note', class: 'px-8 pt-8 md:pr-0 md:py-8' %>
            </figure>
            <div class="card-body items-center text-left text-neutral font-poem">
              <h2 class="card-title"><%= @quest.title %></h2>
              <p class="text-sm"><%= @quest.quest %></p>
            </div>
          </div>
        </div>

      <%= render 'story2', user_name: @quest.user.name %>

      <!-- モーダル -->
      <div class="flex justify-center">
        <button class="btn btn-primary w-3/5 mt-4" onclick="my_modal_4.showModal()">なるほど、求めているものはこれだ！</button>
        <dialog id="my_modal_4" class="modal">
          <div class="modal-box relative"> <!-- relativeクラスを追加 -->
            <!-- ✕ボタン -->
            <form method="dialog">
              <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">✕</button>
            </form>
            <!-- モーダルのタイトル -->
            <h3 class="font-bold text-lg text-neutral-400">答えを入力してね！</h3>
            <!-- 回答入力フォーム -->
            <%= form_tag(answer_quest_path(@quest), method: :post, class: "flex flex-col items-center justify-center gap-4 mt-4") do %>
              <div class="w-full max-w-md">
                <div class="form-control w-full">
                  <%= text_field_tag :name, nil, placeholder: "例：クマのぬいぐるみ", class: "input input-bordered", required: true %>
                </div>
                <div class="w-full flex justify-center">
                  <%= submit_tag "送信", class: "btn hover:bg-primary hover:border-primary mt-4" %>
                </div>
              </div>
              <p class="text-xs text-neutral-400">※正確に入力してください(漢字,カタカナ、スペース等)</p>
            <% end %>
          </div>
        </dialog>
      </div>

      <div class="card-actions justify-center mt-2">
        <%= link_to 'まだ分からないな。もう少し手がかりを探そう', hint_quest_path(@quest), class: "btn btn-primary w-3/5" %>
      </div>
    </div>
  </div>
  <%= render 'caution_note' %>
</div>


